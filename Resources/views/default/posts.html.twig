{% extends 'PrhBlogBundle::base.html.twig' %}

{% block content %}
    <h1 class="page-header">Posts</h1>

    {% include "PrhBlogBundle::flash.html.twig" %}

    <div class="panel panel-default">
        <div class="panel-body">
            <a class="btn btn-primary" href="{{ path('prh_blog_post_new') }}" role="button">New</a>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Posts</h3>
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped" id="posts-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.title }}</td>
                            <td>{{ post.date|date('d/m/Y') }}</td>
                            <td>{% if post.state == 1 %}Published{% endif %}</td>
                            <td><a class="btn btn-primary" href="{{ path('prh_blog_post_edit', {'id': post.id}) }}" role="button">Edit</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#posts-table').DataTable();
        } );
    </script>
{% endblock %}
